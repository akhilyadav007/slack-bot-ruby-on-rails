<%= content_tag :tr, id: dom_id(incident), class: "bg-white border-b dark:bg-gray-800 dark:border-gray-700" do %>
    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
      <%= incident.title %>
    </th>
    <td class="text-left py-3 px-6 bg-gray-200 border-b border-r border-blue-300">
      <%= incident.description %>
    </td>
    <td class="text-left py-3 px-6 bg-gray-200 border-b border-r border-blue-300">
      <%= incident.severity %>
    </td>
    <td class="text-left py-3 px-6 bg-gray-200 border-b border-r border-blue-300">
      <%= incident.status %>
    </td>
    <td class="text-left py-3 px-6 bg-gray-200 border-b border-r border-blue-300">
      <%= incident.reporter.name %>
    </td>
<% end%>